<% if @tweet.errors.any? %>
  <h2>The following errors prevented the tweet from being saved</h2>
  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul> 
<% end %>

<%= form_with(model: @tweet, local: true) do |f| %>

  <div class="mb-3">
    <%= f.label :tweet %><br/>
    <%= f.text_area :tweet, class: "form-control", placeholder: "What's happening" %>
  </div>
  <div class="mb-3">
    <%= f.submit 'Tweet' %>
  </div>
<% end %>
