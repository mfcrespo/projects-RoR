<% if @tweet.errors.any? %>
  <h2>The following errors prevented the tweet from being saved</h2>
  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul> 
<% end %>

<%= form_with(model: @tweet, local: true) do |f| %>

  <div class="card w-50">
    <div class="card-body">
      <p class="card-text">
        <%= f.label :tweet %><br/>
        <%= f.text_area :tweet %>
      </p>

      <p>
        <%= f.submit 'Tweet' %>
      </p>
    </div>  
  </div>  

<% end %>
