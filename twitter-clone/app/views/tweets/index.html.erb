<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'layouts/navigation' %>
    </div>
    <div class="col-3">
      <%= render 'users/who-to-follow' %>
    </div>    
    <div class="col-7">
      <% if user_signed_in? %>
        <%= render partial: 'shared/profile', locals: {user: @user} %>
        <%= render partial: 'feed' %>
      <% else %>
        <%= render partial: 'feed' %>
      <% end %>      
      <div class="pagination justify-content-center">
        <%= will_paginate @tweets %>
      </div>
    </div>
  </div>
</div>
