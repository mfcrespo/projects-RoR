<div class="container-fluid">
  <div class="row">
    <div class="col">
      <%= render 'layouts/navigation' %>
    </div>
    <div class="col-7">
      <% if user_signed_in? %>
        <%= render partial: 'profile', locals: {user: @user} %>
        <%= render 'feed' %>
      <% else %>
        <%= render 'feed' %>
      <% end %>      
      <div class="pagination justify-content-center">
        <%= will_paginate @tweets %>
      </div>
    </div>
    <div class="col-3">
      <%= render 'who-to-follow' %>
    </div>
  </div>
</div>