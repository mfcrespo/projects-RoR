
<% if user_signed_in? %>
  <h3 class="text-center">Who do you want follow?</h3>

  <%= form_with(url: search_path, local:true) do |f| %>
    <div class="form-group">
      <div class="input-group mb-3">

          <span class="input-group-text">@</span>

        	<%= f.text_field :followed, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <%= f.submit "Follow user", class: "btn5" %>
    <%= link_to 'Back Home', tweets_path, class: 'btn4' %>
  <%end%>
<% end %>