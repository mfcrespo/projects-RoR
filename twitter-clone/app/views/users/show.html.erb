<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'layouts/navigation' %>
    </div>
    <div class="col-10">
      <div class="card">
        <div class="card-header">
          Profile
        </div>
        <div class="row">
          <aside class="col-md-4">
            <section>
              <%= render 'shared/profile' %>
              <%= render 'follow_form' if user_signed_in? %>
            </section>
          </aside>
          <div class="col-md-8">
            <% if @user.tweets.any? %>
              <h3>Tweets (<%= @user.tweets.count %>)</h3>
              <ol>
                <%= render 'tweets/feed' %>
              </ol>
              <%= will_paginate @tweets %>
            <% end %>
          </div>
        </div>
      </div>    
    </div>
  </div>
</div>    

