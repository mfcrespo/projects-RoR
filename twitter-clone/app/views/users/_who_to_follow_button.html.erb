<% if user_signed_in? %>
  <%= form_for(current_user.active_relationships.build) do |f| %>
    <div class="form-group">
      <%= text_field_tag :followed_id, params[:followed_id], class: "form-control", placeholder: "Username" %>
    </div>
    <div><%= hidden_field_tag :followed_id, @user.id %></div>
    <%= f.submit "Follow", class: "btn3" %>
  <% end %>
<% end %>

