<%= form_tag user_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Username" %>
  </div>
  <div class="form-group">
    <%= select_tag :username, options_from_collection_for_select(User.all, "username", params[:username]), prompt: "Username", class: "form-control" %>
  </div>
  <%= submit_tag "Search", name: nil, class: "btn btn-primary btn-md" %>
<% end %>