<div id="page-content">
  <h1 class="text-center mt-4">Listing Koombeans' Trainees</h1>



  <div class="container">
    <p class="btn btn-dark">
    <%= link_to 'Register New Trainee', new_trainee_path %>
  </p>
    <% @trainees.each do |trainee| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              Featured
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to trainee.firstname, trainee_path(trainee) %></h5>
              <p class="card-text"><%= trainee.lastname %></p>
              <p class="card-text"><%= truncate(trainee.bio, length: 50) %></p>
              <p class="card-text"><%= link_to trainee.email %></p>
              <a href="#" class="btn btn-success">View more</a>
              <a href="#" class="btn btn-info">Edit</a>
              <a href="#" class="btn btn-danger">Delete</a>
            </div>
            <div class="card-footer text-muted">
              <%= trainee.phone %> | <%= trainee.city %>, <%= trainee.country %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<table>
	<thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Username</th>
      <th>City</th>
      <th>Country</th>
      <th>Phone</th>
      <th>About</th>
      <th>Preference Area</th>
      <th>E-mail</th>
      <th>Github</th>
      <th>Linkedin</th>
      <th>Twitter</th>
      <th colspan=3>Action</th>
    </tr>
	</thead>

  <tbody>
    <% @trainees.each do |trainee| %>
      <tr>
        <td><%= trainee.firstname %></td>
        <td><%= trainee.lastname %></td>
        <td><%= trainee.username %></td>
        <td><%= trainee.city %></td>
        <td><%= trainee.country %></td>
        <td><%= trainee.phone %></td>
        <td><%= trainee.bio %></td>
        <td><%= trainee.preference %></td>
        <td><%= trainee.email %></td>
        <td><%= trainee.github %></td>
        <td><%= trainee.linkedin %></td>
        <td><%= trainee.twitter %></td>
        <td><%= link_to 'Show', trainee_path(trainee) %></td>
        <td><%= link_to 'Edit', edit_trainee_path(trainee) %></td>
        <td><%= link_to 'Delete', trainee_path(trainee), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>
