<h1>Create a new trainee</h1>

<% if @trainee.errors.any? %>
  <h2>The following errors prevented the trainee from being saved</h2>
  <ul>
    <% @trainee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul> 
<% end %>

<%= form_with scope: :trainee, url: trainees_path, local: true do |f| %>
  
  <p>
    <%= f.label :firstname %><br/>
    <%= f.text_field :firstname %>
  </p>

  <p>
    <%= f.label :lastname %><br/>
    <%= f.text_field :lastname %>
  </p>

  <p>
    <%= f.label :city %><br/>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :country %><br/>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :phone %><br/>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :bio %><br/>
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.label :preference %><br/>
    <%= f.text_field :preference %>
  </p>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>  

<% end %>

<%= link_to 'Back to List', trainees_path %>
