<% if @koombean.errors.any? %>
  <h2>The following errors prevented the koombean from being saved</h2>
  <ul>
    <% @koombean.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul> 
<% end %>

<%= form_with(model: @koombean, local: true) do |f| %>

  <p>
    <%= f.label :firstname %><br/>
    <%= f.text_field :firstname %>
  </p>

  <p>
    <%= f.label :lastname %><br/>
    <%= f.text_field :lastname %>
  </p>

  <p>
    <%= f.label :city %><br/>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :country %><br/>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :phone %><br/>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :bio %><br/>
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.label :area %><br/>
    <%= f.text_field :area %>
  </p>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>

  <fieldset>
    <legend>Networks:</legend>
    <%= f.fields_for :networks do |networks_form| %>
      <%= render "network_fields", f: networks_form %>
    <% end %>
    <%= link_to_add_fields "Add Networks", f, :networks %>
  </fieldset>

  <p>
    <%= f.submit %>
  </p>  

<% end %>
