<h1>Listing Koombeans' World</h1>

  <p>
    <%= link_to 'Register New Koombean', new_user_path %>
  </p>

<table>
	<thead>
    <tr>
      <th></th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Username</th>
      <th>City</th>
      <th>Country</th>
      <th>Phone</th>
      <th>About</th>
      <th>Area</th>
      
      <th colspan=3>Action</th>
    </tr>
	</thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to image_tag(thumb_avatar(user, 100)), user.avatar if user.avatar.attached?  %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.username %></td>
        <td><%= user.city %></td>
        <td><%= user.country %></td>
        <td><%= user.phone %></td>
        <td><%= user.bio %></td>
        <td><%= user.area %></td>
        
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>